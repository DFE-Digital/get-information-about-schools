@model Edubase.Web.UI.Models.Notifications.NotificationsBannersViewModel
@{
    ViewBag.Title = "Get Information about Schools";
    ViewBag.SiteSection = "tools";
}

@section BreadCrumbs
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="govuk-breadcrumbs">
                <ol class="govuk-breadcrumbs__list">
                    <li class="govuk-breadcrumbs__list-item">
                        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "govuk-breadcrumbs__link" })
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        @Html.ActionLink("Tools", "Index", "Tools", new { area = "" }, new { @class = "govuk-breadcrumbs__link" })
                    </li>
                </ol>
            </div>
        </div>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Manage notification banners</h1>
    </div>
</div>

<div class="button-row govuk-!-margin-bottom-4">
    @Html.ActionLink(
        "Back",
        "Index",
        "Tools",
        null,
        new { @class = "govuk-back-link gias-back-link--button", data_module = "govuk-button" })
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <ul class="govuk-list">
            <li>
                <h3 class="govuk-heading-s">
                    @Html.ActionLink("Manage visibility of notification banners", "Banners", "Notifications")
                </h3>
                <p>
                    Create a notification banner, view an existing notification banner and/or edit one or more existing notification banner messages, alert levels or scheduling.
                </p>
            </li>

            <li>
                <h3 class="govuk-heading-s">
                    @Html.ActionLink("Manage templated messages for notification banners", "Templates", "Notifications")
                </h3>
                <p>
                    Add, edit or delete templated messages for notification banners.
                </p>
            </li>

            <li>
                <h3 class="govuk-heading-s">
                    @Html.ActionLink("View the full change history audit of the notification banners", "AuditBanners", "Notifications")
                </h3>
                <p>
                    View the full change history audit of all the notification banners, including all created versions.
                </p>
            </li>
        </ul>
    </div>
</div>
