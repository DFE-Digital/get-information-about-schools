@using System.Linq
@model EditEstablishmentLinksViewModel
@{
    Layout = "_EditLayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.LegalParentGroupToken)
    <div class="tab-content">
        <div class="links-list">
            <div>
                @Html.ActionLink("Cancel", "Details", "Establishment", new { id = Model.Urn }, new { @class = "button button-secondary mobile-full-width" })
            </div>

            <p>
                These establishments are linked with @Model.Name,
                <abbr title="Unique Reference Number">URN</abbr>: @Model.Urn For example, they may be predecessor or successor establishments.
            </p>
            <table class="edubase-table no-pagination">
                <caption class="visuallyhidden">Edit establishment links</caption>
                <thead>
                    <tr>
                        <th scope="col"><abbr title="Unique Reference Number">URN</abbr></th>
                        <th scope="col">Establishment name</th>
                        <th scope="col">Type of link</th>
                        <th scope="col">Date linked</th>
                        <th scope="col">
                            <span class="visuallyhidden">Action links</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Links)
                    {
                        <tr>
                            <td data-label="URN">@item.Urn</td>
                            <td data-label="Establishment name">@item.EstablishmentName</td>
                            <td data-label="Type of link">@item.LinkTypeName</td>
                            <td data-label="Date linked">@(item.LinkDate?.ToString("dd/MM/yyyy"))</td>
                            <td><a href="@Url.RouteUrl("EditEstabLink", new { urn = Model.Urn, linkid = item.Id })">Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                <a href="@Url.RouteUrl("EditEstabLinks_SearchForEstablishment", new { id = Model.Urn })" class="plus-link">Add another link</a>
            </p>
            <div class="button-row">
                @Html.ActionLink("Cancel", "Details", "Establishment", new { id = Model.Urn }, new { @class = "button button-secondary mobile-full-width" })
            </div>

        </div>
    </div>
}
