@model Edubase.Services.Domain.ProgressDto
@{
    ViewBag.bodyClasses = "schools-search-page search-page";
    ViewBag.hideLogo = true;
}

<div class="breadcrumbs">
    @Html.ActionLink("Home", "Index", "Search", new { area = "" })
</div>

<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-xlarge">Extract generation completed</h1>
    </div>
    <div class="horizontal-tabs-wrapper">        
        <div class="column-two-thirds">
            
            <h2 class="bold-medium">Your extract is ready</h2>
            <p class="font-small">Your requested file is ready to download.</p>
            
            <ul>
                <li class="download-list-item">
                    <span class="icon-link-copy">
                        <a href="@Model.FileLocationUri" target="_blank" rel="nofollow">@(Model.Name ?? "Results.zip"), @Html.FileSizeInMegabytes(Model.FileSizeInBytes)</a>
                    </span>
                </li>
            </ul>
        </div>
    </div>
</div>

