@model AddressViewModel
    
<h2 class="heading-medium">Address details </h2>

<div class="form-group @Html.ValidationCssClassFor(x => x.Line1)">
    @Html.LabelFor(x => x.Line1)
    @Html.ValidationMessageFor(x => x.Line1)
    @Html.TextBoxFor(x => x.Line1, new { @class = "form-control" })
</div>

<div class="form-group @Html.ValidationCssClassFor(x => x.Line2)">
    @Html.LabelFor(x => x.Line2)
    @Html.ValidationMessageFor(x => x.Line2)
    @Html.TextBoxFor(x => x.Line2, new { @class = "form-control" })
</div>

<div class="form-group @Html.ValidationCssClassFor(x => x.Line3)">
    @Html.LabelFor(x => x.Line3)
    @Html.ValidationMessageFor(x => x.Line3)
    @Html.TextBoxFor(x => x.Line3, new { @class = "form-control" })
</div>

<div class="form-group @Html.ValidationCssClassFor(x => x.CityOrTown)">
    @Html.LabelFor(x => x.CityOrTown)
    @Html.ValidationMessageFor(x => x.CityOrTown)
    @Html.TextBoxFor(x => x.CityOrTown, new { @class = "form-control" })
</div>

<div class="form-group @Html.ValidationCssClassFor(x => x.County)">
    @Html.LabelFor(x => x.County)
    @Html.ValidationMessageFor(x => x.County)
    @Html.DropDownListFor(x => x.County, Model.Counties, "Please select", new { @class = "form-control" })
</div>

<div class="form-group @Html.ValidationCssClassFor(x => x.PostCode)">
    @Html.LabelFor(x => x.PostCode)
    @Html.ValidationMessageFor(x => x.PostCode)
    @Html.TextBoxFor(x => x.PostCode, new { @class = "form-control", maxlength = 120 })
</div>