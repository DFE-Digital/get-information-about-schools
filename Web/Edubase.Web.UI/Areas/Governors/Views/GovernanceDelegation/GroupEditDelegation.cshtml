@model EditGroupDelegationInformationViewModel
    
@{
    ViewBag.hideLogo = true;
    ViewBag.SelectedTab = "EditGovernance";
    Layout = Model.Layout;
}

<div id="" class="tab-content">
    <div class="column-two-thirds">
        <h1 class="heading-medium tab-lead">Governance</h1>
        @using (Html.BeginForm("GroupEditDelegation", "GovernanceDelegation", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.GroupUId)
            <h2 class="heading-small">Delegated authority of local governing body</h2>
            <div class="edit-governor">                
                <div class="form-group">
                    @Html.LabelFor(x => x.DelegationInformation, new {@class = "form-label"})

                    @Html.TextAreaFor(x => x.DelegationInformation, new {rows = "6", cols = "60", @class="form-control"})
                </div>

                <div class="button-row">
                    <button type="submit" value="Save" class="button mobile-full-width">Save</button>
                    <a href="@Url.RouteUrl("GroupEditGovernance", new {GroupUId = Model.GroupUId})" class="button button-secondary mobile-full-width">Cancel</a>
                </div>
            </div>
        }
    </div>
</div>

@section ViewScripts
{
    <script>
        $('#DelegationInformation').textCount();

        (function () {
            if ("@Request.HttpMethod" == "GET") {
                var initialValue = $.trim($("textarea").val());
                $("button[type=submit]").prop("disabled", true);
                $("textarea").on("change keyup", function () {
                    $("button[type=submit]").prop("disabled", initialValue == $.trim($("textarea").val()));
                });
            }
        })();
    </script>
}