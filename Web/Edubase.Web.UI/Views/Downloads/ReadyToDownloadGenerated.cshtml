@model Edubase.Services.Domain.ProgressDto
<div class="grid-row">
    <div class="column-full">
        <div class="breadcrumbs">
            <ol>
                <li>
                    @Html.ActionLink("Home", "Index", "Search", new { area = "" }, null)
                </li>
                <li>
                    @Html.ActionLink("Downloads", "Index", "Downloads")
                </li>
            </ol>
        </div>
        <h1 class="heading-xlarge">Download generation completed</h1>
    </div>
    <div class="horizontal-tabs-wrapper">
        <div class="column-full">

            <h2 class="heading-small">Your download is ready</h2>
            <p>Your requested file is ready to download.</p>

            <ul>
                <li class="download-list-item">
                    <span class="icon-link-copy">
                        <a href="@Model.FileLocationUri" target="_blank" rel="nofollow">@(Model.Name ?? "Extract.zip") <span class="visually-hidden">Opens in new window</span></a>
                    </span>
                </li>
            </ul>
        </div>
    </div>
</div>
