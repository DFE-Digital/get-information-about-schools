@using System.Web.UI.HtmlControls

@{
    ViewBag.bodyClasses = "schools-search-page";
    ViewBag.hideLogo = true;
    ViewBag.Title = "4778 : Schools search";
}

@helper SearchElement(
    String label,
    String placeholder,
    String componentId,
    String action = "#")
{
    <!-- HTML ids don't affect the styling or JS -->
    <li class="search-type-wrapper" id="@componentId-wrapper">
        <form action="@action" method="post">
            <label>
                <input type="radio" id="@componentId" class="panel-toggle" />
                <span class="label-text">@label</span>
            </label>
            <div class="expanding-search-field">
                <span class="search-hint">@placeholder</span>
                <input type="text" class="form-control" id="user-text-@componentId" required>
                <button type="submit" class="button button-next" name="searchtype">Search</button>
            </div>
        </form>
    </li>
}

<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-xlarge">Search for schools and colleges</h1>
    </div>
    
    <div class="column-full">
        <fieldset class="search-types-accordion"> <!-- changing the classname on this will requre a JS tweak -->
            <legend>Search by:</legend>
            @Html.ValidationSummary() <!-- may or may not be required -->
            
            <ul class="search-type-list">
                @SearchElement("School or college name", "e.g. Aston Academy", "school-name")
                
                @SearchElement("School or college URN", "e.g. XXXXXX", "school-urn")

                @SearchElement("School or college LAESTAB", "e.g. XXXXXX", "school-laestab")

                @SearchElement("Multi Academy Trust", "e.g. Aston Academy", "multi-academy")

                @SearchElement("Local Authority", "e.g. Tameside or Gloucestershire", "local-authority")
            </ul>
            
        </fieldset>
    </div>
</div>
