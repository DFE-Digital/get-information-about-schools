@model Edubase.Web.UI.Models.DataQuality.DataQualityStatusViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Prototype page</title>
</head>
<body>
<div id="data-status-summary" class="data-status-summary">
    <a href="#" id="data-status-close" class="modal-exit">Close</a>
    <div class="overlay-padder">
        <h1 class="heading-large">Data status</h1>
        @if (Model.Urgent)
        {
            <div class="warning-message">
                <p>Please update your data status</p>
            </div>
        }
        else
        {
            <p class="table-caption">These dates show when each of our teams last updated their data.</p>
        }
       

        <table class="edubase-table retain-columns">
            <thead>
                <tr>
                    <th>Establishment type</th>
                    <th>Last updated</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.Items)
                {
                    <tr>
                        <td aria-label="Establishment type">@data.EstablishmentType.GetEnumMember()</td>
                        <td aria-label="Last updated">@data.LastUpdated.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="button-row">
        @if (Model.Urgent)
        {
            <a href="#" class="button mobile-full-width" id="data-status-update">Update</a>
            <a href="#" class="button button-grey mobile-full-width" id="data-status-close">Exit</a>
        }
        else
        {
            <a href="#" class="button mobile-full-width" id="data-status-info">More info</a>
            <a href="#" class="button button-grey mobile-full-width" id="data-status-close">Exit</a>

        }
            
        </div>
    </div>
</div>
</body>
</html>
