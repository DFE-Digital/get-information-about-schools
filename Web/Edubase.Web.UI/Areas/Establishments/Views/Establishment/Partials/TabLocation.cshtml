@model EstablishmentDetailViewModel

<div id="school-location" class="tab-content">

    @if (Model.UserCanEdit)
    {
        @Html.ActionLink("Edit", "EditLocation", "Establishment", new { id = Model.Establishment.Urn }, new { @class = "button button-grey mobile-full-width" })
    }

    <div class="detail-summary">
        <dl>
            <dt><abbr title="Regional Schools Commissioner">RSC</abbr> Region:</dt>
            <dd>@Model.RSCRegionName</dd>

            <dt>Government Office Region:</dt>
            <dd>@Model.GovernmentOfficeRegionName</dd>

            <dt>District:</dt>
            <dd>@Model.AdministrativeDistrictName</dd>

            <dt>Ward:</dt>
            <dd>@Model.AdministrativeWardName</dd>

            <dt>Parliamentary Constituency:</dt>
            <dd>@Model.ParliamentaryConstituencyName</dd>

            <dt>Urban/Rural Description:</dt>
            <dd>@Model.UrbanRuralName</dd>

            <dt><abbr title="Government Statistical Service">GSS</abbr> LA Code:</dt>
            <dd>@Model.GSSLAName</dd>

            <dt>Easting:</dt>
            <dd>@Model.Establishment.Easting</dd>

            <dt>Northing:</dt>
            <dd>@Model.Establishment.Northing</dd>

            <dt>Census Ward: </dt>
            <dd>@Model.CASWardName</dd>

            <dt>Middle Super Output Area (MSOA): </dt>
            <dd>@Model.MSOAName</dd>

            <dt>Lower Super Output Area (LSOA):</dt>
            <dd>@Model.LSOAName</dd>
        </dl>
    </div>
    

    @if (Model.DisplayPolicy.AltSiteName.GetValueOrDefault(true))
    {
        <h3 class="font-small">Other site</h3>
        if (Model.Establishment.AltSiteName != null)
        {
            <h4 class="font-small">@Model.Establishment.AltSiteName</h4>
        }

        <div class="detail-summary">
            <dl>
                <dt>Address:</dt>
                <dd>@Model.GetAltAddress()</dd>

                @*<dt>Telephone</dt>
                    <dd>@(address.TelephoneNumber ?? "Not recorded")</dd>*@
            </dl>
        </div>
    }

    @if (Model.UserCanEdit)
    {
        @Html.ActionLink("Edit", "EditLocation", "Establishment", new { id = Model.Establishment.Urn }, new { @class = "button button-grey mobile-full-width" })
    }
</div>
