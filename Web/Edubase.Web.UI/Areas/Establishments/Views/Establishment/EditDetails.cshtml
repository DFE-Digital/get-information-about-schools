            <label class="govuk-label" for="ReligiousCharacterId">Religious character</label>
            @Html.DropDownListFor(x => x.ReligiousCharacterId, Model.ReligiousCharacters, "", new {@class = "govuk-select", id = "ReligiousCharacterId"})
