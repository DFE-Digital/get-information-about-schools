@using Edubase.Common.Text
@model Edubase.Services.Domain.ProgressDto
@{
    ViewBag.hideLogo = true;
    ViewBag.SiteSection = "downloads";
    var isExtract = !(ViewBag.isDownload?? false);
    var areaTitle = isExtract ? "Extract" : "Download";
    if (isExtract)
    {
        ViewBag.bodyClasses = "schools-search-page search-page";
        ViewBag.hideLogo = true;
    }
}

@section Head {
    <meta http-equiv="refresh" content="2">
}

@section BreadCrumbs
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="govuk-breadcrumbs">
                <ol class="govuk-breadcrumbs__list">
                    <li class="govuk-breadcrumbs__list-item">@Html.ActionLink("Home", "Index", "Search", new { area = "" }, new { @class = "govuk-breadcrumbs__link"})</li>
                    <li class="govuk-breadcrumbs__list-item">@Html.ActionLink("Downloads", "Index", "Downloads", new { @class = "govuk-breadcrumbs__link" })</li>
                </ol>
            </div>
        </div>
    </div>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">@areaTitle.ToTitleCase() generation</h1>
    </div>
    <div class="download-step">
        <div class="govuk-grid-column-full">
            <h2 class="govuk-heading-s">Please wait while your file is being generated</h2>
            <p>Generating your requested data. Large files may take some time to generate.</p>

            <div aria-live="polite" class="wait-spinner">
                <p class="govuk-visually-hidden">Please wait</p>
            </div>
        </div>
    </div>
</div>
