@model Edubase.Services.Domain.ProgressDto
@{
    ViewBag.bodyClasses = "schools-search-page search-page";
    ViewBag.hideLogo = true;
}

@section Head {
    <meta http-equiv="refresh" content="2">
}

<div class="breadcrumbs">
    <ol>
        <li>@Html.RouteLink("Home", "Homepage")</li>
        <li>@Html.RouteLink("Tools", "Tools")</li>
        <li>@Html.RouteLink("View independent schools' significant dates", "IndSchSearch")</li>
    </ol>
</div>

<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-xlarge">Download</h1>
    </div>
    <div class="download-step">
        <div class="column-two-thirds">
            <h2 class="bold-medium">@ViewBag.Subtitle</h2>
            <p class="font-small">Preparing your requested data. Large files may take some time to download.</p>

        </div>
        <div class="column-full">
            <div class="progress-indicator">
                <span class="visually-hidden">Please wait. Your file is being prepared</span>
            </div>
        </div>
        <div class="column-full">
            <div class="button-row">
                <br/>
                @Html.RouteLink("Â« Go back", "IndSchSearch", null, new {@class = "button button-secondary back-to-indi" })
            </div>
        </div>
    </div>
</div>

@section ViewScripts
{
    <script nonce="@Html.ScriptNonce()">
        $('.back-to-indi').on('click', function(e) {
            e.preventDefault();
            window.history.go(-1);
        })
    </script>
}
