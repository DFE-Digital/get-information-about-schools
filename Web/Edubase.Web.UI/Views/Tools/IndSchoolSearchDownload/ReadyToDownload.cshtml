@model Edubase.Services.Domain.ProgressDto

@{
    ViewBag.bodyClasses = "schools-search-page search-page";
    ViewBag.hideLogo = true;
}


<div class="breadcrumbs">
    <ul>
        <li>@Html.RouteLink("Home", "Homepage")</li>
        <li>@Html.RouteLink("Tools", "Tools")</li>
        <li>@Html.RouteLink("Independent schools reminders", "IndSchSearch")</li>
    </ul>
</div>

<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-xlarge">Download data</h1>
    </div>
    <div class="horizontal-tabs-wrapper">        
        <div class="column-two-thirds">
            <h2 class="bold-medium">@ViewBag.Subtitle</h2>
            <p class="font-small">Your requested file is ready to download.</p>
            
            <ul>
                <li class="download-list-item">
                    <span class="icon-link-copy">
                        <a href="@Model.FileLocationUri" target="_blank" rel="nofollow">Data in XLSX format</a>
                        (will download as a ZIP file: open the ZIP to access its content)
                    </span>

                </li>
            </ul>
        </div>
    </div>
</div>

