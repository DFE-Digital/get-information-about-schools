@{
    ViewBag.bodyClasses = "schools-search-page search-page";
    ViewBag.hideLogo = true;
}

<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-xlarge">Download data</h1>
    </div>
    <div class="horizontal-tabs-wrapper">        
        <div class="column-full">
            
            <h2 class="bold-medium">Download establishment search results</h2>
            <p>2 of 4</p>
            <h2 class="bold-medium">Select the ﬁle format of the data you are interested in</h2>
            <p>
                You can download your requested data in either CSV or XLSX format. 
                The file will download as a ZIP file: open the ZIP to access its contents.
            </p>

            @using (Html.BeginForm("PrepareDownload", "Search", FormMethod.Get))
            {
                <div class="form-group">
                    <fieldset>

                        <legend class="visually-hidden"></legend>

                        <label class="block-label selection-button-radio" for="radio-1">
                            <input id="radio-1" type="radio" name="fileformat" value="csv">
                            Data in CSV format
                        </label>
                        <label class="block-label selection-button-radio" for="radio-2">
                            <input id="radio-2" type="radio" name="fileformat" value="xlsx">
                            Data in XLSX (Excel) format
                        </label>

                    </fieldset>
                </div>

                <br />
                <br />

                @Html.HiddenFieldsFromQueryString()

                <input class="button button-next" type="submit" value="Save and continue">
            }

        </div>
    </div>
</div>

