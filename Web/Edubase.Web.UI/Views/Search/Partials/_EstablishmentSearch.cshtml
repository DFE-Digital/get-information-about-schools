@using VM = Edubase.Web.UI.Models.Search.SearchViewModel;
@using Edubase.Web.UI.Helpers;
@model VM

<fieldset class="search-types-accordion">
    <legend>
        <h2 class="heading-small flush--top">Search by:</h2>
    </legend>

    <ul class="search-type-list has-typeahead">
        <li class="search-type-wrapper">
            @using (Html.BeginRouteForm("SearchResults", FormMethod.Get))
            {
                @Html.HiddenFor(m => m.SelectedTab)
                <fieldset class="search-toggle-panel">
                    <legend class="visually-hidden">Search by name or reference number</legend>
                    <div class="multiple-choice multiple-choice--radio">
                        @Html.RadioButtonFor(m => m.SearchType, eSearchType.Text, new { id = "searchtype-name", data_toggle_panel = "#searchby-name-ref" })
                        <label for="searchtype-name">Name or reference number</label>
                    </div>
                    <div class="panel panel-border-narrow" id="searchby-name-ref">
                        @* This alert gets dynamically populated *@
                        <div class="warning-message visuallyhidden" role="alert">
                            <p class="message-text" aria-live="polite"></p>
                        </div>
                        @if (Model.SearchType == eSearchType.Text && Model.NoResults)
                        {
                            if (Model.TextSearchModel.Text == null)
                            {
                                @* Static alert for no search results, where nothing was entered *@
                                <div role="alert" class="warning-message js-trigger-aria-live">
                                    <p class="message-text" aria-live="polite">Please enter an establishment name, URN, LAESTAB or UKPRN to start a search</p>
                                </div>
                            }
                            else
                            {
                                @* Static alert for no search results *@
                                <div role="alert" class="warning-message js-trigger-aria-live">
                                    <p class="message-text" aria-live="polite">We couldn't find any establishments matching your search criteria</p>
                                </div>
                            }
                        }
                        <label class="form-label" for="TextSearchModel_Text">
                            Enter name, <abbr title="Unique Reference Number">URN</abbr>, LAESTAB or UKPRN
                            <a href="#name-reference-help" class="tooltip-link js-tooltip">
                                <span class="visuallyhidden">Help with reference numbers</span>
                            </a>
                        </label>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.TextSearchModel.Text, new { @class = "form-control", autocomplete = "off", data_suggestion_url = "/search/suggest?text=", maxlength="200", aria_describedby="name-reference-help" })
                        </div>
                        <div class="form-group">
                            <div class="multiple-choice">
                                <input id="include-open-establishments-name" type="checkbox" checked="checked" name="OpenOnly" value="true" />
                                <label for="include-open-establishments-name">Include open schools only</label>
                            </div>
                        </div>
                        @Html.HiddenFor(x => x.TextSearchModel.AutoSuggestValue)
                        <div class="form-group">
                            <button type="submit" class="button search-button" id="name-search-submit" name="SearchType" value="@eSearchType.Text">Search</button>
                        </div>
                        <input type="hidden" name="@VM.BIND_ALIAS_GOONERES" value="true" />
                    </div>
                </fieldset>

            }
        </li>

        <li class="search-type-wrapper">
            @using (Html.BeginRouteForm("SearchResults", FormMethod.Get, new { id = "location-search-form" }))
            {
                <fieldset class="search-toggle-panel">
                    <legend class="visually-hidden">Search by location</legend>
                    <div class="multiple-choice multiple-choice--radio">
                        @Html.HiddenFor(m => m.SelectedTab)
                        @Html.RadioButtonFor(m => m.SearchType, eSearchType.Location, new { id = "searchtype-location", data_toggle_panel = "#searchby-location-ref" })
                        <label for="searchtype-location">
                            Location
                        </label>
                    </div>
                    <div class="panel panel-border-narrow" id="searchby-location-ref">
                        @* This alert gets dynamically populated *@
                        <div class="warning-message visuallyhidden" role="alert">
                            <p class="message-text" aria-live="polite"></p>
                        </div>
                        @if (Model.SearchType == eSearchType.Location && Model.NoResults)
                        {
                            @* Currently not displaying. Redirecting instead *@
                            <div class="warning-message js-trigger-aria-live" role="alert">
                                <p class="message-text" aria-live="polite">Please enter a postcode, town or city to start a search</p>
                            </div>
                        }
                        <label class="form-label" for="LocationSearchModel_Text">Enter postcode, town or city</label>
                        <div class="form-group">
                            @Html.TextBoxFor(x => x.LocationSearchModel.Text, new { @class = "form-control location-search", autocomplete = "off", maxlength = "200" })
                        </div>

                        @Html.HiddenFor(x => x.LocationSearchModel.AutoSuggestValue)

                        <div class="form-group">
                            <div class="multiple-choice">
                                <input id="include-open-establishments-location" type="checkbox" checked="checked" name="OpenOnly" value="true" />
                                <label for="include-open-establishments-location">Include open schools only</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="button search-button" id="location-search-submit" name="SearchType" value="@eSearchType.Location">Search</button>
                        </div>
                    </div>

                </fieldset>

            }
        </li>
        <li class="search-type-wrapper" id="la">
            <fieldset class="search-toggle-panel">
                <legend class="visually-hidden">Search by local authority</legend>
                @using (Html.BeginRouteForm("SearchResults", FormMethod.Get))
                {
                    <div class="multiple-choice multiple-choice--radio">
                        @Html.HiddenFor(m => m.SelectedTab)
                        @Html.RadioButtonFor(m => m.SearchType, eSearchType.ByLocalAuthority, new { id = "searchtype-la", data_toggle_panel = "#searchby-la-ref" })
                        <label for="searchtype-la">
                            Local authority
                        </label>
                    </div>
                    <div class="panel panel-border-narrow" id="searchby-la-ref">
                        <div class="warning-message visuallyhidden" role="alert">
                            <p class="message-text" aria-live="polite"></p>
                        </div>
                        @if (Model.SearchType == eSearchType.ByLocalAuthority && Model.NoResults)
                        {
                            if (!Model.SelectedLocalAuthorityIds.Any())
                            {
                                <div class="warning-message js-trigger-aria-live" role="alert">
                                    <p class="message-text" aria-live="polite">Please enter a local authority to start a search</p>
                                </div>
                            }
                            else
                            {
                                <div class="warning-message js-trigger-aria-live" role="alert">
                                    <p class="message-text" aria-live="polite">We couldn't find any local authorities matching your search criteria</p>
                                </div>
                            }
                        }

                        <label class="form-label" for="LocalAuthorityToAdd">Enter one or more local authorities (LAs)</label>
                        <div class="selected-las form-group">
                            <div id="la-id-target" class="la-id-target form-control">

                                @foreach (var id in Model.SelectedLocalAuthorityIds)
                                {
                                    var la = Model.LocalAuthorities.First(x => x.Id == id);
                                    <input value="@la.Name" type="hidden" class="form-control user-selected-la" />
                                    <button type="submit" class="link-button font-small remove-suggest-la" name="LocalAuthorityToRemove" data-remove="la-@id" value="@id">@la.Name</button>
                                }
                                <div class="floating-text-field-wrap">
                                    @Html.TextBoxFor(x => x.LocalAuthorityToAdd, new { @class = "floating-text-field", autocomplete = "off" })
                                </div>
                            </div>
                            <button type="submit"
                                    class="button-secondary button no-js-remove"
                                    name="SearchType" value="@eSearchType.LocalAuthorityDisambiguation">
                                Find
                            </button>
                        </div>

                        <div class="form-group">
                            <div class="multiple-choice">
                                <input id="include-open-establishments-la" type="checkbox" checked="checked" name="OpenOnly" value="true" />
                                <label for="include-open-establishments-la">Include open schools only</label>
                            </div>
                        </div>


                        @Html.HiddenFieldsFromQueryString(new[] { "NoResults", "SearchType" })
                        <div class="form-group">
                            <button type="submit" class="button button-below search-button" id="la-search-submit" name="SearchType" value='@eSearchType.ByLocalAuthority'>Search</button>
                        </div>
                    </div>
                }

            </fieldset>
        </li>

        <li aria-hidden="true">
            <p>or</p>
        </li>

        <li class="search-type-wrapper">
            @using (Html.BeginRouteForm("SearchResults", FormMethod.Get))
            {
                <fieldset class="search-toggle-panel">
                    <legend class="visually-hidden">Search all establishments</legend>
                    <div class="multiple-choice multiple-choice--radio">
                        @Html.HiddenFor(m => m.SelectedTab)
                        @Html.RadioButtonFor(m => m.SearchType, eSearchType.EstablishmentAll, new { id = "searchtype-all", data_toggle_panel = "#searchby-all-ref" })
                        <label for="searchtype-all">
                            All establishments
                        </label>
                    </div>
                    <div class="panel panel-border-narrow" id="searchby-all-ref">
                        <div class="form-group">
                            <div class="multiple-choice">
                                <input id="include-open-establishments-all" type="checkbox" checked="checked" name="OpenOnly" value="true" />
                                <label for="include-open-establishments-all">Include open schools only</label>
                            </div>
                        </div>
                        @Html.HiddenFor(x => x.TextSearchModel.AutoSuggestValue)
                        <div class="form-group">
                            <button type="submit" class="button search-button" id="all-search-submit" name="SearchType" value="@eSearchType.EstablishmentAll">Search</button>
                        </div>

                        <input type="hidden" name="@VM.BIND_ALIAS_GOONERES" value="true" />
                    </div>
                </fieldset>

            }
        </li>
    </ul>

</fieldset>
