@model Edubase.Web.UI.Models.DataQuality.FullDataQualityStatusViewModel
<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-large">Data status</h1>
        
        @if (Model.DataUpdated)
        {
            <div class="pending-updates-message dismissable-message">
                <div class="tick"></div>
                <p>Data status has been updated.</p>
                <a href="#" class="cross"><span class="visually-hidden">Dismiss notification</span></a>
            </div>
        }
        
        
        <p class="table-caption">These dates show each of our teams last updated their data.</p>
        
        <table class="edubase-table">
            <thead>
            <tr>
                <th>Establishment type</th>
                <th>Last updated</th>
                <th>Data owner</th>
                <th>Email</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td aria-label="Establishment type">@item.EstablishmentType.GetEnumMember()</td>
                    <td aria-label="Last updated">@item.LastUpdated.ToString()</td>
                    <td aria-label="Data owner">@item.DataOwner</td>
                    <td aria-label="Email">
                        <span class="truncate">
                            @item.Email
                        </span>
                    </td>
                </tr>
            }

            </tbody>
        </table>
        
        <p id="independent-pending">* All approved changes to schools' registered details are recorded at this date. Changes still pending approval won't appear here yet.</p>
        
        <div class="button-row">
            <a class="button button-grey" href="/DataQuality/Edit">Update status</a>
        </div>
    </div>
</div>