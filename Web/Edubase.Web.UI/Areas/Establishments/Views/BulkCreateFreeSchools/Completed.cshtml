@model BulkCreateFreeSchoolsViewModel

<div class="breadcrumbs">
    <ul>
        <li>@Html.RouteLink("Home", "Homepage")</li>
        <li>@Html.RouteLink("Tools", "Tools")</li>
        <li>@Html.RouteLink("Bulk create new free schools", "BulkCreateFreeSchools")</li>
    </ul>
</div>

<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-xlarge">Free schools created</h1>
        <p>Your free schools have been created and are pending approval.</p>
    </div>
    <div class="column-full">
        <div class="top-pagination">
            <div class="pagination">
                <p>Showing 1 - @Model.Result.CreatedEstablishments.Length of @Model.Result.CreatedEstablishments.Length</p>
            </div>
        </div>
        <table class="edubase-table">
            <caption class="visuallyhidden">Free schools created</caption>
            <thead>
                <tr>
                    <th scope="col"><abbr title="Unique Reference Number">URN</abbr></th>
                    <th scope="col">Name</th>
                    <th scope="col">Phase of education</th>
                    <th scope="col">Establishment type</th>
                    <th scope="col">Opening date</th>
                    <th scope="col">Opening reason</th>
                    <th scope="col">Establishment status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model.Result.CreatedEstablishments)
                {
                    <tr>
                        <td class="fixed-width" data-label="URN">@Html.RouteLink(e.Urn.ToString(), "EstabDetails", new { id = e.Urn })</td>
                        <td class="fixed-width" data-label="Name of establishment">@Html.RouteLink(e.Name, "EstabDetails", new { id = e.Urn })</td>
                        <td class="fixed-width" data-label="Phase of education">@e.PhaseOfEducationName</td>
                        <td class="fixed-width" data-label="Establishment type">@e.EstablishmentTypeName</td>
                        <td class="fixed-width" data-label="Opening date">@(e.OpenDate.ToString("dd/MM/yyyy"))</td>
                        <td class="fixed-width" data-label="Opening reason">@e.ReasonForOpening</td>
                        <td class="fixed-width" data-label="Establishment status">@e.EstablishmentStatusName</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="lower-pagination">
            <div class="pagination">
                <p>Showing 1 - @Model.Result.CreatedEstablishments.Length of @Model.Result.CreatedEstablishments.Length</p>
            </div>
        </div>
    </div>
</div>
