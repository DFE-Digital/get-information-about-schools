    <div id="name-reference-help" role="tooltip" aria-hidden="@(Model.SelectedTab != SearchViewModel.Tab.Establishments)">
        <h3 class="govuk-heading-s make-modal-header">Name, URN, LAESTAB, or UKPRN</h3>
        <p>
            Enter the establishment's name or a reference number:
            <ul class="govuk-list govuk-list--bullet">
                <li>URN (Unique Reference Number)</li>
