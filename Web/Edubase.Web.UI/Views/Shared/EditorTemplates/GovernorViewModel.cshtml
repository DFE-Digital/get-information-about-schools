@using Edubase.Common
@using Edubase.Services.Enums
@using Edubase.Web.UI.Helpers
@using Edubase.Web.UI.Views.Shared.EditorTemplates.Model
@model Edubase.Web.UI.Areas.Governors.Models.GovernorViewModel

@if (EnumSets.eGovernanceProfessionalRoles.Contains(Model.GovernorRole))
{
    @await Html.PartialAsync("_DisplayGrid", Model);
    @await Html.PartialAsync("_DisplayName", Model);
    @await Html.PartialAsync("_DisplayDateOfBirth", Model);
    @await Html.PartialAsync("_DisplayPostcode", Model);
    @await Html.PartialAsync("_DisplayTelephoneNumber", Model);
    @await Html.PartialAsync("_DisplayEmail", Model);
    @await Html.PartialAsync("_DisplayAppointmentDates", Model);
}
else
{
    @await Html.PartialAsync("_DisplayName", Model);
    @await Html.PartialAsync("_IsOriginalSignatoryMember", Model);
    @await Html.PartialAsync("_IsOriginalChairOfTrustees", Model);
    @await Html.PartialAsync("_DisplayGrid", Model);
    @await Html.PartialAsync("_DisplayAppointingBody", Model);
    @await Html.PartialAsync("_DisplayAppointmentDates", Model);
    @await Html.PartialAsync("_DisplayEmail", Model);
    @await Html.PartialAsync("_DisplayPostcode", Model);
    @await Html.PartialAsync("_DisplayDateOfBirth", Model);
    @await Html.PartialAsync("_DisplayPreviousName", Model);
    @await Html.PartialAsync("_DisplayTelephoneNumber", Model);
}
