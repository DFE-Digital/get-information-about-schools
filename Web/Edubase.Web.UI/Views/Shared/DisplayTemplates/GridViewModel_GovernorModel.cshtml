@model Edubase.Web.UI.Models.Grid.GridViewModel<Edubase.Services.Governors.Models.GovernorModel>

<div class="governor-grid">
    <h2 class="bold-small">@Model.Title</h2>
    @if (Model.Rows.Any())
    {
        <table class="edubase-table list-table">
            <thead>
            <tr>
                @foreach (var column in Model.HeaderCells)
                {
                    <th>@(column.Text ?? "Not recorded")</th>
                }
            </tr>
            </thead>
            <tbody>
            @foreach (var row in Model.Rows)
            {
                var cellCount = 0;
                <tr>
                    @foreach (var cell in row.Cells)
                    {
                                            
                        <td aria-label="@Model.HeaderCells[cellCount].Text">@(cell.Text ?? "Not recorded")</td>
                        cellCount++;
                    }
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p class="none">Not recorded</p>
    }
</div>