@using Edubase.Web.UI.Models
@model DelegationInformationViewModel

<h2 class="govuk-heading-s">Delegated authority of local governing body</h2>

<div>
    <p class="govuk-body-s">
        @(!string.IsNullOrWhiteSpace(Model.DelegationInformation) ? Model.DelegationInformation : "Not recorded")
    </p>
</div>

@if (Model.EditMode)
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            @Html.RouteLink(
            "Edit delegated authority",
                "GroupEditDelegation",
                new { groupUId = Model.GroupUId },
                new { @class = "govuk-button govuk-button--secondary" }
                )
        </div>
    </div>
}
