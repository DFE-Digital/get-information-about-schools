@model SearchCompaniesHouseModel
@{
    ViewBag.bodyClasses = "create-edit-school school-details";
    ViewBag.hideLogo = true;
    ViewBag.Title = "Create academy trust";
}

@using (Html.BeginForm("SearchCompaniesHouse", "Trust", FormMethod.Get))
{ 
    <div class="grid-row">
        <div class="column-two-thirds">
            @Html.ActionLink("Search for an Academy Trust", "Index", "Search", null, new { @class = "home-link" })
            
            
            <h1 class="heading-xlarge">
                Create a new Multi academy trust or Single academy trust
            </h1>

            @Html.ValidationSummary(null, new { @class = "error-summary" })


        </div>
    </div>
    <div class="grid-row">
        <div class="column-two-thirds">

            <div class="form-group">
                <label class="form-label" style="padding-bottom:5px;">Enter Companies House number OR Company name</label>

                @Html.TextBoxFor(x => x.SearchText, new { maxlength = 120, @class = "form-control", style = "max-width:300px; margin-bottom:5px;" })
                <button type="submit" class="button button-next">Search</button>
            </div>

        </div>
    </div>

    if (Model.Results != null)
    {
        <div class="grid-row">
            <div class="column-two-thirds">
                <p>
                    We found <span class="heading-xlarge">@Model.Results.Count</span>
                    @(Model.Results.Count == 1 ? "company" : "companies")
                    @(Model.IsNumberSearch ? $"with the Companies House number '{Model.SearchText}'" : $"matching '{Model.SearchText}'").
                </p>

            </div>
        </div>

        
        if (Model.Results.PageCount > 1)
        {
            <div class="grid-row">
                <div class="column-two-thirds top-pagination">
                    @Html.Partial("_ResultsPagination3", Model)
                </div>
            </div>
        }


        if (Model.Results.Items.Any())
        {
            <div class="grid-row">
                <div class="column-two-thirds">
                    <ul class="school-results-listing">
                        @foreach (var result in Model.Results.Items)
                        {
                            <li>
                                <h2>@Html.ActionLink(result.Name, "Create", new { id = result.Number }, new { @class = "bold-small" })</h2>
                                <dl>
                                    <dt>Companies House Number:</dt>
                                    <dd>@result.Number</dd>
                                    <dt>Incorporated:</dt>
                                    <dd> @(result.IncorporationDate?.ToString("dd MMMM yyyy"))</dd>
                                    <dt>Address:</dt>
                                    <dd>@result.Address</dd>
                                </dl>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }

        if (Model.Results.PageCount > 1)
        {
            <div class="grid-row">
                <div class="column-two-thirds lower-pagination">
                    @Html.Partial("_ResultsPagination3", Model)
                </div>
            </div>
        }

        if (Model.NotFound)
        {
            <div class="grid-row">
                <div class="column-two-thirds">
                    <p>Please check the Companies House number or Company name entered.</p>
                </div>
            </div>
        }

    }


}
