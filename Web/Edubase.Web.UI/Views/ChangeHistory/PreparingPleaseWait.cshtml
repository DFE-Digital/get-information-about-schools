@using Edubase.Web.UI
@model Edubase.Services.Domain.ProgressDto
@{
    ViewBag.bodyClasses = "schools-search-page search-page";
    ViewBag.hideLogo = true;
    ViewBag.SiteSection = "tools";
}

@section Head {
    <noscript>
        <meta http-equiv="refresh" content="2">
    </noscript>
    <meta name="robots" content="noindex,nofollow" />
}

@section BreadCrumbs
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="govuk-breadcrumbs">
                <ol class="govuk-breadcrumbs__list">
                    <li class="govuk-breadcrumbs__list-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "govuk-breadcrumbs__link" })</li>
                    <li class="govuk-breadcrumbs__list-item">
                        @Html.ActionLink("Tools", "Index", "Tools", new {area = ""}, new {@class = "govuk-breadcrumbs__link"})
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        @Html.ActionLink("Change history", "Index", "ChangeHistory", new {area = ""}, new {@class = "govuk-breadcrumbs__link"})
                    </li>
                </ol>
            </div>
        </div>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">Download change history</h1>
    </div>
    <div class="download-step">
        <div class="govuk-grid-column-full">
            <h2 class="govuk-heading-s">Download change history data</h2>
            <p>Preparing your requested data. Large files may take some time to generate.</p>

            <div aria-live="polite" class="gias-wait-mask gias-wait-mask--inline">
                <p class="govuk-visually-hidden">Please wait</p>
                @helpers.CssSpinner()
            </div>
        </div>
    </div>
    <div class="govuk-grid-column-full govuk-!-padding-top-8">
        <a href=@($"{Url.RouteUrl("ChangeHistorySearch")}?{Request.QueryString.RemoveKey("DownloadFormat")}") class="govuk-button govuk-button--secondary" data-module="govuk-button">Cancel</a>
    </div>
</div>


@section ViewScripts
{
    <script src="@Html.Raw(Html.GetWebpackScriptUrl("polling.*.js"))"></script>
}
