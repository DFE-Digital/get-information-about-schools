@{
    ViewBag.bodyClasses = "schools-search-page search-page";
    ViewBag.hideLogo = true;
    var breadcrumbRoutes = ViewBag.BreadcrumbRoutes as RouteDto[];
}
@section Head
{
    <meta name="robots" content="noindex,nofollow" />
}
@section Breadcrumbs
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="govuk-breadcrumbs">
                <ol class="govuk-breadcrumbs__list">
                    <li class="govuk-breadcrumbs__list-item">
                        @Html.ActionLink("Search", "Index", "Search", new { area = "" }, new { @class = "govuk-breadcrumbs__link" })
                    </li>
                    @foreach (var item in breadcrumbRoutes)
                    {
                        <li class="govuk-breadcrumbs__list-item">@Html.RouteLink(item.Label, item.RouteName, item.RouteValues,new Dictionary<string, object>(){{"class", "govuk-breadcrumbs__link"}})</li>
                    }
                </ol>
            </div>
        </div>
    </div>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-l">Download data</h1>
    </div>
    <div class="gias-tabs-wrapper">
        <div class="govuk-grid-column-two-thirds">

            <p class="govuk-body">Your requested file is ready to download.</p>

            <ul class="govuk-list">
                <li>
                    <a href="@Url.Current(new { start = true })" rel="nofollow">
                        Data in @(Request.QueryString["downloadtype"]?.ToString().ToUpper()) format
                    </a>
                    (will download as a ZIP file: open the ZIP to access its content)

                </li>
            </ul>
        </div>
    </div>
</div>
