@model System.Web.Mvc.HandleErrorInfo

@{
    Layout = "../dfe/layouts/template.cshtml";
    ViewBag.Title = "Edubase";
    ViewBag.pageDescription = "";
    ViewBag.pageClass = "error-page";
    ViewBag.suppressHomeLink = true;
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (ViewBag.ErrorCode != null)
{
    <p style="color:#ddd;">Error code: @ViewBag.ErrorCode</p>
}
