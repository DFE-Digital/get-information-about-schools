<div id="school-governance" class="tab-content">
    
    @if (Model.UserCanEdit)
    {
        @Html.ActionLink("Edit", "Edit", "Governor", new { establishmentUrn = Model.Establishment.Urn, area = "Governors" }, new { @class = "button button-secondary mobile-full-width" })
    }

    @{Html.RenderAction("View", "Governor", new { viewModel = Model.GovernorsGridViewModel, area = "Governors" });}

    @if (Model.UserCanEdit)
    {
        @Html.ActionLink("Edit", "Edit", "Governor", new { establishmentUrn = Model.Establishment.Urn, area = "Governors" }, new { @class = "button button-secondary mobile-full-width" })
    }
</div>