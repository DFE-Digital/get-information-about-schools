@using Edubase.Web.UI.Models
@using System.Linq
@using ViewModel = Edubase.Web.UI.Models.Establishments.IEstablishmentPageViewModel
@model ViewModel
@{
    ViewBag.bodyClasses = "create-edit-school school-details";
    ViewBag.hideLogo = true;
    ViewBag.Title = "Edit establishment";
    Layout = "~/Views/Dfe/Layouts/template.cshtml";
}

<h1 class="heading-large">@Model.Name</h1>
<p class="urn">URN: @Model.Urn</p>

@*@Html.Partial("_ValidationSummary", ViewData.ModelState)*@
@Html.ValidationSummary("Incorrect or missing details", new { @class = "error-summary" })

<div class="grid-row">
    <div class="column-full">

        <div class="horizontal-tabs-wrapper">
            <div class="tab-wrap">
                <ul class="horizontal-tabs">
                    <li>
                        @if (string.Equals(Model.SelectedTab, "details"))
                        {
                            <a href="@Url.Action("EditDetails", "Establishment", new {id = Model.Urn, area = ""})" class="horizontal-tab selected-tab">Details</a>
                        }
                        else
                        {
                            <a href="@($"{Url.Action("Details", "Establishment", new {id = Model.Urn, area = ""})}#school-dashboard")" class="horizontal-tab">Details</a>
                        }
                        
                    </li>
                        
                    
                    <li>
                        @if (string.Equals(Model.SelectedTab, "links"))
                        {
                            <a href="@Url.Action("EditLinks", "Establishment", new {id = Model.Urn, area = ""})" class="horizontal-tab selected-tab">Links</a>
                        }
                        else
                        {
                            <a href="@($"{Url.Action("Details", "Establishment", new {id = Model.Urn, area = ""})}#school-links")" class="horizontal-tab">Links</a>
                        }
                    </li>
                    

                    @if (Model.TabDisplayPolicy.Location)
                    {
                        <li>
                            @if (string.Equals(Model.SelectedTab, "location"))
                            {
                                <a href="@Url.Action("EditLocation", "Establishment", new {id = Model.Urn, area = ""})" class="horizontal-tab selected-tab">Location</a>
                            }
                            else
                            {
                                <a href="@($"{Url.Action("Details", "Establishment", new {id = Model.Urn, area = ""})}#school-location")" class="horizontal-tab">Location</a>
                            }
                        </li>
                    }

                    @if (Model.TabDisplayPolicy.IEBT)
                    {
                        <li>
                            @if (string.Equals(Model.SelectedTab, "iebt"))
                            {
                                <a href="@Url.Action("EditIEBT", "Establishment", new {id = Model.Urn, area = ""})" class="horizontal-tab selected-tab">IEBT</a>
                            }
                            else
                            {
                                <a href="@($"{Url.Action("Details", "Establishment", new {id = Model.Urn, area = ""})}#school-iebt")" class="horizontal-tab">IEBT</a>
                            }
                        </li>
                    }

                    @if (Model.TabDisplayPolicy.Governance)
                    {
                        <li>
                            @if (string.Equals(Model.SelectedTab, "governance"))
                            {
                                <a href="@Url.Action("Edit", "Governor", new { establishmentUrn = Model.Urn, area = "Governors" })" class="horizontal-tab selected-tab">Governance</a>
                            }
                            else
                            {
                                <a href="@($"{Url.Action("Details", "Establishment", new {id = Model.Urn, area = ""})}#school-governance")" class="horizontal-tab">Governance</a>
                            }
                        </li>
                    }

                    @if (Model.TabDisplayPolicy.Helpdesk)
                    {
                        <li>
                            @if (string.Equals(Model.SelectedTab, "helpdesk"))
                            {
                                <a href="@Url.Action("EditHelpdesk", "Establishment", new {id = Model.Urn, area = ""})" class="horizontal-tab @Html.Conditional(Model.SelectedTab == "helpdesk", "selected-tab")">Helpdesk</a>
                            }
                            else
                            {
                                <a href="@($"{Url.Action("Details", "Establishment", new {id = Model.Urn, area = ""})}#helpdesk")" class="horizontal-tab">Helpdesk</a>
                            }
                        </li>
                    }
                </ul>
            </div>
            <div class="tab-content-wrapper horizontal-tabs-content">
            @if (Model.SelectedTab == "governance")
            {
                <div class="tab-content">
                    @RenderBody()
                </div>
            }
            else
            {
                @RenderBody()
            }

            </div>
        </div>
    </div>
</div>

 @section ViewScripts
 {
     @(RenderSection("ViewScripts", required: false))
 }
