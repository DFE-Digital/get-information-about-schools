@model IHtmlString
@{
    ViewBag.Title = "Get information about schools";
    ViewBag.bodyClasses = "news-page";
    ViewBag.SiteSection = "news";
}

@section BreadCrumbs
 {
 <div class="govuk-grid-row">
     <div class="govuk-grid-column-full">
         <div class="govuk-breadcrumbs">
             <ol class="govuk-breadcrumbs__list">
                 <li class="govuk-breadcrumbs__list-item">@Html.ActionLink("Home", "Index", "Search", new { area = "" }, new { @class = "govuk-breadcrumbs__link"})</li>
                 <li class="govuk-breadcrumbs__list-item">@Html.ActionLink("News", "News", "Home", new { area = "" }, new { @class = "govuk-breadcrumbs__link"})</li>
             </ol>
         </div>
     </div>
 </div>
 }


<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-4">News archive</h1>
    </div>
</div>
<div class="govuk-grid-row news">

    <div class="govuk-grid-column-two-thirds news-blog">
        <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible"/>
        @Model
    </div>

</div>
