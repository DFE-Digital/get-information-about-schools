@using Edubase.Common
@model EstablishmentDetailViewModel

<div id="helpdesk" class="tab-content">
    @if (Model.UserCanEdit)
    {
        @Html.ActionLink("Edit helpdesk notes", "EditHelpdesk", "Establishment", new { id = Model.Establishment.Urn }, new { @class = "button button-secondary mobile-full-width" })
    }

    <div class="detail-summary">

        <h2 class="heading-small">@Html.DisplayNameFor(m => m.Establishment.HelpdeskNotes):</h2>
        <div>@(Model.Establishment.HelpdeskNotes.Clean() ?? "Not recorded")</div>

        <dl>
            <dt>@Html.DisplayNameFor(m => m.Establishment.HelpdeskLastUpdate):</dt>
            <dd>@(Model.Establishment.HelpdeskLastUpdate?.ToString("dd/MM/yyyy"))</dd>

            <dt>@Html.DisplayNameFor(m => m.Establishment.HelpdeskTrigger1):</dt>
            <dd>@Model.Establishment.HelpdeskTrigger1</dd>

            <dt>Previous local authority:</dt>
            <dd>@Model.HelpdeskPreviousLocalAuthorityName</dd>

            <dt>@Html.DisplayNameFor(m => m.Establishment.HelpdeskPreviousEstablishmentNumber):</dt>
            <dd>@Model.Establishment.HelpdeskPreviousEstablishmentNumber</dd>

        </dl>
    </div>

  @if (Model.UserCanEdit)
    {
        @Html.ActionLink("Edit helpdesk notes", "EditHelpdesk", "Establishment", new { id = Model.Establishment.Urn }, new { @class = "button button-secondary  mobile-full-width" })
    }
</div>
