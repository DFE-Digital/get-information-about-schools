@{
    ViewBag.bodyClasses = "schools-search-page search-page";
    ViewBag.hideLogo = true;
    var breadcrumbRoutes = ViewBag.BreadcrumbRoutes as RouteDto[];
}

<div class="breadcrumbs">
    <ul>
        <li>@Html.RouteLink("Home", "Homepage")</li>
        @foreach (var item in breadcrumbRoutes)
        {
            <li>@Html.RouteLink(item.Label, item.RouteName, item.RouteValues)</li>
        }
    </ul>
</div>

<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-xlarge">Download data</h1>
    </div>
    <div class="horizontal-tabs-wrapper">        
        <div class="column-two-thirds">
            
            <p class="font-small">Your requested file is ready to download.</p>
            
            <ul>
                <li class="download-list-item">
                    <span class="icon-link-copy">
                        <a href="@Url.Current(new { start = true })" target="_blank" rel="nofollow">Data in @(Request.QueryString["downloadtype"]?.ToString().ToUpper()) format</a>
                        (will download as a ZIP file: open the ZIP to access its content)
                    </span>

                </li>
            </ul>
        </div>
    </div>
</div>

