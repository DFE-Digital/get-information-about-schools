@model EditSharedGovernorViewModel

@{
    ViewBag.hideLogo = true;
    ViewBag.SelectedTab = "EditGovernance";
    Layout = Model.Layout;
}

<div id="edit-shared-governor" class="tab-content">
    <div class="column-two-thirds">
        @using (Html.BeginForm("EditSharedGovernor", "SharedGovernor", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Governor.Id)
            @Html.HiddenFor(m => m.Urn)
            <div class="button-row">
                <input type="submit" value="Save" class="button mobile-full-width" />
                <a href="@Url.RouteUrl("EstabEditGovernance", new { establishmentUrn = Model.Urn.Value })" class="button button-grey mobile-full-width">Cancel</a>
            </div>
            <h2 class="heading-medium">Edit @Model.GovernorType</h2>
            <div class="edit-governor">
                <h3 class="heading-small">@Model.Governor.FullName</h3>
                @Html.EditorFor(x => x.Governor.AppointmentStartDate)
                @Html.EditorFor(x => x.Governor.AppointmentEndDate)
                <div class="button-row">
                    <input type="submit" value="Save" class="button mobile-full-width" />
                    <a href="@Url.RouteUrl("EstabEditGovernance", new { establishmentUrn = Model.Urn.Value })" class="button button-grey mobile-full-width">Cancel</a>
                </div>
            </div>
        }
    </div>
</div>