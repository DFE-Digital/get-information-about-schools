@model Edubase.Services.Domain.ProgressDto
@{
    ViewBag.hideLogo = true;
    ViewBag.SiteSection = "downloads";
}
@section BreadCrumbs
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <div class="govuk-breadcrumbs">
                <ol class="govuk-breadcrumbs__list">
                    <li class="govuk-breadcrumbs__list-item">@Html.ActionLink("Home", "Index", "Search", new { area = "" }, new { @class = "govuk-breadcrumbs__link"})</li>
                    <li class="govuk-breadcrumbs__list-item">@Html.ActionLink("Downloads", "Index", "Downloads", new { @class = "govuk-breadcrumbs__link" })</li>
                </ol>
            </div>
        </div>
    </div>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <h1 class="govuk-heading-xl">Extract generation completed</h1>
    </div>
    <div class="govuk-grid-column-full">
        <h2 class="govuk-heading-s">Your extract is ready</h2>
        <p>Your requested file is ready to download.</p>
        <ul class="govuk-list">
            <li class="download-list-item">
                <a href="@Model.FileLocationUri" target="_blank" rel="nofollow">
                    @(Model.Name ?? "Results.zip") <span class="govuk-visually-hidden">Opens in new window</span>
                </a>
            </li>
        </ul>
    </div>
</div>
